---
import type { PostPreview } from "@/components/Blog/types"
import { Card, CardContent } from "@/components/ui/card"

interface Props {
  post: PostPreview
  pill?: boolean
  transition?: boolean
}

const { post } = Astro.props
---

<a
  href={`/post/${post.slug}`}
  class="group block h-full focus:outline-none focus-visible:ring-2 focus-visible:ring-ring rounded-lg transition-colors duration-300 ease-in-out"
>
  <Card
    className="h-full overflow-hidden pt-0 pb-1 bg-card transition-colors transition-transform group-hover:bg-black/5 dark:group-hover:bg-muted/40"
  >
    <CardContent className="px-0">
      <div class="aspect-video overflow-hidden">
        <img
          src={post.cover.src}
          alt={post.title}
          class="size-full object-cover transition-transform group-hover:scale-105 dark:opacity-90 dark:brightness-[0.95]"
        />
      </div>
      <div class="space-y-3 p-5">
        <p class="text-muted-foreground text-xs tracking-widest uppercase">
          {post.category}
        </p>
        <h3 class="text-xl font-bold">
          {post.title}
        </h3>
        <p class="text-muted-foreground line-clamp-5">
          {post.description}
        </p>
      </div>
    </CardContent>
  </Card>
</a>
